generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum GameStatus {
  LOBBY
  PLAYING
  GAME_OVER
  VICTORY
}

model Game {
  id            String        @id @default(uuid())
  limited_life  Boolean       @default(false)
  game_name     String
  players       PlayerState[]
  status        GameStatus    @default(LOBBY)
  lives         Int           @default(3)
  round         Int           @default(0)
  current_round Int           @default(0)
}

model Player {
  id          String        @id @default(uuid())
  player_name String        @unique
  state       PlayerState[]
}

model PlayerState {
  player     Player  @relation(fields: [player_id], references: [id])
  game       Game    @relation(fields: [game_id], references: [id])
  player_id  String  @unique
  game_id    String
  has_played Boolean @default(true)
  socket_id  String?

  @@id([player_id, game_id])
}
